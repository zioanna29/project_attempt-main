<section class="container mb-2 mt-2 border">
    
    <form class="mt-2" id="diorganwseis-filter" action="/diorganwseis-filter" method="get">
            
            <div class="row form-group">
                <div class="col-lg-3">
                    <input type="checkbox" class="btn-check" name="hmeromhniaCheck"  id="hmeromhnia" autocomplete="off">
                    <label class="btn btn-outline-primary" for="hmeromhnia">Ημερομηνία</label>
                    <div class="input-group date mb-3 mb-lg-1" id="datepicker">
                        <div class="mb-0">
                            <div class="input-group date mb-0" id="start-date">
                                <input type="text" name="startDate" class="form-control">
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                        <div class="text-center">
                            <label for="end-date" class="my-0" ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-up" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5m-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5"/>
                              </svg></label>
                            <div class="input-group date" id="end-date">
                                <input type="text" name="endDate" class="form-control">
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
               
                <div class="col-lg-2 ">
                    <input type="checkbox" class="btn-check" name="agwnistikhCheck" id="agwnistikh" autocomplete="off">
                    <label class="btn btn-outline-primary" for="agwnistikh">Όμιλος</label>
                    <select class="form-control mb-3 mb-lg-1" name="agwnistikh" id="changeAgwnistikh">
                        <!-- options will be fetched from database -->
                        <option></option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>

                <div class="col-lg-2 ">
                    <input type="checkbox" class="btn-check" name="kathgoriaCheck" id="kathgoria" autocomplete="off">
                    <label class="btn btn-outline-primary" for="kathgoria">Κατηγορία</label>  
                    <select class="form-control mb-3 mb-lg-1" name="kathgoria" type="text" id="changeKathgoria">
                        <option></option>
                        <option>Α</option>
                        <option>Β</option>
                        <option>Γ</option>
                        <option>Κ13</option>
                        <option>Κ15</option>
                        <option>Κ17</option>
                    </select>
                </div>
                <div class="allign-items-end mt-3">
                    <button class="btn btn-secondary" id="resetButtonDiorganwseis">Εκκαθάριση</button>
                    <button class="btn btn-success" type="submit">Έυρεση</button>
                </div>
            </div>
    </form>
</section>


<table class="table table-striped table-responsive">
    <caption class="caption-top">Διοργανώσεις
        <% if (association != "") { %> | <%= association%>ος όμιλος <% } %> 
        <% if (category != "") { %> | <%= category%> κατηγορία <% } %> 
        <% if (startDate != "") { %> | από <%= startDate %> μέχρι <%= endDate%> <% } %> 
    
    </caption>
        <th>Γήπεδο</th>
        <th>Ημερομηνία</th>
        <th>'Ωρα</th>
        <th>Διαιτητής</th>
        <th>Αποτέλεσμα</th>
    <% matches.map((match)=>{ %>
    <tr><td><%= match.omada1 %>-<%= match.omada2 %></td>
        <td><%= match.field_name %></td>
        <td><%= match.date %></td>
        <td><%= match.time %></td>
        <td><%= match.name %></td>
        <td><%= match.combined_result %></td></tr>
        <% }) %>
</table>
    




